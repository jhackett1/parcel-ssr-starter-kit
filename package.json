{
  "name": "parcel-ssr-starter-kit",
  "version": "1.0.0",
  "description": "",
  "main": "src/client/index.js",
  "scripts": {
    "dev": "parcel src/client/index.html",
    "dev:server": "nodemon --exec 'npm run build:client && npm run build:server && node dist/server/index.js' --watch src --ext js,jsx",
    "build:client": "parcel build src/client/index.html -d dist/client",
    "build:server": "parcel build src/server/index.js --target node -d dist/server",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.3"
  }
}
